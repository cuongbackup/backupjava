<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <filter>
        <filter-name>AuthenticationFilter</filter-name>
        <filter-class>controller.AuthenticationFilter</filter-class>
    </filter>
    <filter>
        <filter-name>ImageFilter</filter-name>
        <filter-class>controller.ImageFilter</filter-class>
        <init-param>
            <param-name>MAX_WIDTH</param-name>
            <param-value>600</param-value>
        </init-param>
        <init-param>
            <param-name>MAX_HEIGHT</param-name>
            <param-value>400</param-value>
        </init-param>
        <init-param>
            <param-name>FOLDER</param-name>
            <param-value>uploads</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>AuthenticationFilter</filter-name>
        <url-pattern>/reader/*</url-pattern>
        <dispatcher>REQUEST</dispatcher>
        <dispatcher>FORWARD</dispatcher>
        <dispatcher>INCLUDE</dispatcher>
    </filter-mapping>
    <filter-mapping>
        <filter-name>AuthenticationFilter</filter-name>
        <url-pattern>/staff/*</url-pattern>
        <dispatcher>REQUEST</dispatcher>
        <dispatcher>FORWARD</dispatcher>
        <dispatcher>INCLUDE</dispatcher>
    </filter-mapping>
    <filter-mapping>
        <filter-name>ImageFilter</filter-name>
        <url-pattern>/staff/*</url-pattern>
    </filter-mapping>
    <listener>
        <description>ServletContextListener</description>
        <listener-class>controller.ApplicationtListener</listener-class>
    </listener>
    <servlet>
        <servlet-name>NewBookServlet</servlet-name>
        <servlet-class>controller.NewBookServlet</servlet-class>
        <init-param>
            <param-name>semester</param-name>
            <param-value>SP23</param-value>
        </init-param>
    </servlet>
    <servlet>
        <servlet-name>ListBookServlet</servlet-name>
        <servlet-class>controller.ListBookServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>BookSearchServlet</servlet-name>
        <servlet-class>controller.BookSearchServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>controller.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ListDummy</servlet-name>
        <servlet-class>controller.ListDummy</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>NewBookServlet</servlet-name>
        <url-pattern>/staff/newbook</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ListBookServlet</servlet-name>
        <url-pattern>/listAll</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>BookSearchServlet</servlet-name>
        <url-pattern>/bsearch</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ListDummy</servlet-name>
        <url-pattern>/dummy</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <error-page>
        <exception-type>java.lang.Exception</exception-type>
        <location>/error.jsp</location>
    </error-page>
</web-app>
